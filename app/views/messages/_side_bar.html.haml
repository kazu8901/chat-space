.sidebar
  .sidebar__name
    .top-items
      .top-items__user-name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit', class: "edit")
        = link_to edit_user_path(current_user) do
          = icon("fas", "cog", class: "cog")
  .sidebar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) , class: "group__info" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
              